{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Templates index",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "description", "icon", "versions"],
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "icon": {
        "type": "string",
        "format": "uri"
      },
      "versions": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["id", "label", "path", "compose", "env"],
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            },
            "label": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "compose": {
              "type": "string"
            },
            "env": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["label", "key", "type", "policy"],
                "additionalProperties": false,
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "key": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["plain", "secret"]
                  },
                  "policy": {
                    "type": "string",
                    "enum": ["input", "generate"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
